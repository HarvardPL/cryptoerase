#!/bin/sh

prg=`basename "$0"`
if [ `uname` = "Linux" ]; 
then
  dir=`dirname \`readlink -f "$0"\``/..
else
  dir=`dirname "$0"`/..
fi

# *************
# Find the appropriate directories, if we can

# Find Polyglot
if [ -z "$POLYGLOT" ]; then
  echo Cant find POLYGLOT
fi

# Find Accrue
if [ -z "$ACCRUE" ]; then
  ACCRUE=$dir/../accrue
fi
if [ ! -d "$ACCRUE" ]; then
  ACCRUE=$dir/../../accrue
fi

# Find Infoflow
if [ -z "$INFOFLOW" ]; then
  INFOFLOW=$dir/../infoflow
fi
if [ ! -d "$INFOFLOW" ]; then
  INFOFLOW=$dir/../../infoflow
fi


usage() {
  polyglot -h
  cat <<EOF
  -j <jvm-options>         pass options to the Java VM
  -J <jvm>                 use a different Java VM (default java in path)
  -V                       echo the java command
EOF
}

fixclasspath() {
  windows=0

  if [ `uname | grep -c CYGWIN` -ne 0 ]; then
    windows=1
  fi

  cp="$1"
  if [ "$windows" = 1 ]; then 
      cygpath -pw "$cp"
  else
      echo "$cp"
  fi
}

extra_cp=
args=
vmargs=-Xmx1G
classpath=
java=java

polyglot() {
    cmmd="$vmargs  -classpath '$classpath'  polyglot.main.Main -classpath '$classpath' -extclass '$extclass'  -sigsourcepath $sigsrc -noserial -post echo $@"
    if [ "$verbose" = 1 ]; then
	echo "$java" "$cmmd"
    fi
    eval "$java" "$cmmd"
}

while true; do
    case "$1" in
        "")
            break
            ;;
        -V)
            verbose=1
            shift
            ;;
        -classpath)
            shift
            extra_cp="$extra_cp:$1"
            shift
            ;;
        -j)
            shift
            vmargs="$vmargs '$1'"
            shift
            ;;
        -J)
            shift
            java="'$1'"
            shift
            ;;
        -h)
            usage=1
            break
            ;;
        *)
            args="$args '$1'"
            shift
            ;;
    esac
done

classpath="$dir/classes"
classpath="$classpath:$ACCRUE/classes"
classpath="$classpath:$INFOFLOW/classes"
classpath="$classpath:$POLYGLOT/classes"
classpath="$classpath:$dir/lib/accrue-infoflow.jar"
classpath="$classpath:$dir/lib/accrue.jar"
classpath="$classpath:$dir/lib/polyglot.jar"
classpath="$classpath:$dir/lib/JFlex.jar"
classpath="$classpath:$dir/lib/java_cup.jar"
classpath="$classpath:$dir/lib/ppg.jar"
classpath="$classpath:$INFOFLOW/lib/JSON-java.jar"
classpath="$classpath:$POLYGLOT/lib/JFlex.jar"
classpath="$classpath:$POLYGLOT/lib/java_cup.jar"
classpath="$classpath:$POLYGLOT/lib/ppg.jar"
classpath="$classpath:$extra_cp"
classpath=`fixclasspath "$classpath"`

sigsrc="$dir/sig-src:$ACCRUE/sig-src:$INFOFLOW/sig-src"
sigsrc=`fixclasspath "$sigsrc"`

if [ "$usage" = 1 ]; then
  usage
  exit 0
fi

extclass="cryptoerase.CryptoErasureExtensionInfo"

polyglot "$args"
